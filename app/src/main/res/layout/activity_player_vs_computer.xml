<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo"
    tools:context=".PlayerVsComputer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jcaf.adivinquienpokemon.personaje
            android:id="@+id/personajeE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:transitionGroup="false">

            <Button
                android:id="@+id/regresar"
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_anterior"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />


            <TextView
                android:id="@+id/pregunta"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Â¿Tu personaje aparce en la primera serie?"
                android:textSize="16sp" />

            <Button
                android:id="@+id/siguiente"
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:background="@drawable/pokeballsiguiente"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puntaje"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/puntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/my_border">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.jcaf.adivinquienpokemon.personaje
                        android:id="@+id/card24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/PreguntaBo"
                style="buttonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:text="Enviar Pregunta"
                android:textColor="#000000"
                app:strokeColor="@color/black" />

            <TextView
                android:id="@+id/gameover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center" />
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifWin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pikawin"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>